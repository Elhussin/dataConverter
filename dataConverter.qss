/* Style for Input Fields (QLineEdit) */
QLineEdit {
    background-color: #ffffff;  /* White background for text input */
    border: 1px solid #cccccc;  /* Light gray border for the input box */
    border-radius: 5px;  /* Rounded corners for the input field */
    padding: 10px;  /* Add some padding inside the input box */
    font-size: 12pt;  /* Same font size as general text */
    color: #333333;
}

QLineEdit:focus{
    border: 1px solid #8ad6fa;  /* Light gray border for the input box */
}